{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "ignoreDeprecations": "6.0",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@nura/core": ["vendor/nura-core/dist/index"],
      "@nura/client": ["vendor/nura-client/dist/index"],
      "@nura/react": ["vendor/nura-react/dist/index"],
      "@nura/transport-http": ["vendor/nura-transport-http/dist/index"],
      "@nura/intents": ["vendor/nura-intents/dist/index"],
      "vitest": ["vendor/vitest/dist/index"],
      "@playwright/test": ["vendor/playwright-test/dist/index"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
